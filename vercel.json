{
  "version": 2,
  "builds": [
    {
      "src": "portfolio_web/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles_build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "portfolio_web/wsgi.py"
    }
  ],
  "build": {
    "env": {},
    "commands": [
      "pip install -r requirements.txt",
      "python manage.py collectstatic --noinput"
    ]
  }
}
